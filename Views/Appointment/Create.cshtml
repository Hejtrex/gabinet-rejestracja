@model AppointmentModel
@using System.Data.SqlClient
@{
    ViewData["Title"] = "Zarezerwuj wizytę";
}

<h2>Zarezerwuj wizytę</h2>
<div class="row">
    <div class="col-md-4">
        @{
            string UserId;

            if (Context.Request.Cookies.TryGetValue("UserId", out UserId))
            {
                <form asp-controller="Appointment" asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment" class="control-label"></label>
                        <input asp-for="Comment" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Zarezerwuj" class="btn btn-primary" />
                    </div>
                </form>
            }
        }
    </div>
</div>
<div>
    <a asp-action="Index">Wróć do listy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}