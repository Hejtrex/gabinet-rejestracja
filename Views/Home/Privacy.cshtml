                string userEmail;
                if (Context.Request.Cookies.TryGetValue("Email", out userEmail))
                {
                    <button class="button-wizyta" onclick="location.pathname='/Appointment/Create'">Umów się na wizytę!</button>
                }
                else
                 {

                    <button class="button-wizyta" onclick="location.pathname='/User/Register'">Umów się na wizytę!</button>
                 }
                }

            </div>
            
            <img src="~/images/konsultacje.jpg" style="height:30%; width:30%">
        </div>

